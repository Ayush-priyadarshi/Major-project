<% layout("layouts/boilerplate") %>

<!-- Hero Section -->
<div class="hero-section bg-gradient text-white py-5 mb-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="display-4 fw-bold mb-3">Welcome to Wonderlust</h1>
        <p class="lead mb-4">Discover amazing places and unique experiences around the world. Your journey starts here.</p>
        <div class="d-flex gap-3">
          <a href="/listings" class="btn btn-light btn-lg">
            <i class="fas fa-search me-2"></i>Explore Listings
          </a>
          <a href="/listings/new" class="btn btn-outline-light btn-lg">
            <i class="fas fa-plus me-2"></i>List Your Place
          </a>
        </div>
      </div>
      <div class="col-lg-6 text-center">
        <i class="fas fa-globe-americas display-1 opacity-75"></i>
      </div>
    </div>
  </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
  <div class="row g-4">
    <div class="col-md-4 text-center">
      <div class="feature-card p-4 h-100">
        <i class="fas fa-search text-primary fs-1 mb-3"></i>
        <h4 class="fw-bold mb-3">Discover Places</h4>
        <p class="text-muted">Find unique accommodations and experiences worldwide. From cozy cabins to luxury villas.</p>
      </div>
    </div>
    <div class="col-md-4 text-center">
      <div class="feature-card p-4 h-100">
        <i class="fas fa-star text-primary fs-1 mb-3"></i>
        <h4 class="fw-bold mb-3">Write Reviews</h4>
        <p class="text-muted">Share your experiences and help others discover amazing places through your reviews.</p>
      </div>
    </div>
    <div class="col-md-4 text-center">
      <div class="feature-card p-4 h-100">
        <i class="fas fa-home text-primary fs-1 mb-3"></i>
        <h4 class="fw-bold mb-3">List Your Place</h4>
        <p class="text-muted">Earn money by hosting travelers and sharing your space with the world.</p>
      </div>
    </div>
  </div>
</div>

<!-- Featured Listings Section -->
<div class="container mb-5">
  <div class="row mb-4">
    <div class="col">
      <h2 class="text-gradient mb-0">Featured Listings</h2>
      <p class="text-muted">Discover handpicked accommodations for your next adventure</p>
    </div>
  </div>
  
  <% if (featuredListings && featuredListings.length > 0) { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% for (let listing of featuredListings) { %>
        <div class="col fade-in-up">
          <div class="card listing-card h-100 border-0 shadow-sm">
            <div class="position-relative overflow-hidden">
              <img src="<%= listing.image?.url || listing.image %>" class="card-img-top" alt="<%= listing.title %>" style="height: 250px; object-fit: cover;">
              <div class="position-absolute top-0 end-0 m-3">
                <button class="btn btn-light btn-sm rounded-circle shadow-sm">
                  <i class="fas fa-heart text-muted"></i>
                </button>
              </div>
              <% if (listing.rating) { %>
                <div class="position-absolute bottom-0 start-0 m-3">
                  <span class="badge bg-primary">
                    <i class="fas fa-star me-1"></i><%= listing.rating.toFixed(1) %>
                  </span>
                </div>
              <% } %>
            </div>
            
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h5 class="card-title mb-1"><%= listing.title %></h5>
                <div class="text-end">
                  <div class="fw-bold text-primary">
                    <% if (listing.price) { %>
                      â‚¹<%= listing.price.toLocaleString("en-IN") %>
                    <% } else { %>
                      N/A
                    <% } %>
                  </div>
                  <small class="text-muted">per night</small>
                </div>
              </div>
              
              <p class="card-text text-muted mb-2">
                <i class="fas fa-map-marker-alt me-1"></i>
                <%= listing.location %><%= listing.country ? ', ' + listing.country : '' %>
              </p>
              
              <% if (listing.type) { %>
                <p class="card-text text-muted mb-3">
                  <i class="fas fa-home me-1"></i>
                  <%= listing.type %>
                </p>
              <% } %>
              
              <% if (listing.host) { %>
                <p class="card-text text-muted mb-3">
                  <i class="fas fa-user me-1"></i>
                  Hosted by <%= listing.host %>
                </p>
              <% } %>
              
              <% if (listing._id) { %>
                <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary btn-sm">
                  View Details
                </a>
              <% } else { %>
                <button class="btn btn-outline-primary btn-sm" onclick="alert('This is a featured listing from our partner. Create your own listing to get started!')">
                  Learn More
                </button>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
    
    <div class="text-center mt-5">
      <a href="/listings" class="btn btn-primary btn-lg">
        <i class="fas fa-arrow-right me-2"></i>View All Listings
      </a>
    </div>
  <% } else { %>
    <div class="text-center py-5">
      <i class="fas fa-home text-muted display-4 mb-3"></i>
      <h4 class="text-muted mb-3">No Listings Yet</h4>
      <p class="text-muted mb-4">Be the first to add a listing and start your hosting journey!</p>
      <a href="/listings/new" class="btn btn-primary btn-lg">
        <i class="fas fa-plus me-2"></i>Add Your First Listing
      </a>
    </div>
  <% } %>
</div>

<!-- Call to Action Section -->
<div class="bg-light py-5">
  <div class="container">
    <div class="row justify-content-center text-center">
      <div class="col-lg-8">
        <h3 class="mb-3">Ready to Start Your Journey?</h3>
        <p class="text-muted mb-4">Join thousands of travelers and hosts on Wonderlust</p>
        <div class="d-flex gap-3 justify-content-center">
          <% if (!currUser) { %>
            <a href="/signup" class="btn btn-primary btn-lg">
              <i class="fas fa-user-plus me-2"></i>Sign Up
            </a>
            <a href="/login" class="btn btn-outline-primary btn-lg">
              <i class="fas fa-sign-in-alt me-2"></i>Log In
            </a>
          <% } else { %>
            <a href="/listings" class="btn btn-primary btn-lg">
              <i class="fas fa-search me-2"></i>Explore Listings
            </a>
            <a href="/listings/new" class="btn btn-outline-primary btn-lg">
              <i class="fas fa-plus me-2"></i>List Your Place
            </a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.hero-section {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
  position: relative;
  overflow: hidden;
}

.hero-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
  opacity: 0.3;
}

.feature-card {
  background: var(--white);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-md);
  transition: all 0.3s ease;
  border: 1px solid var(--gray-200);
}

.feature-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-xl);
}

.listing-card {
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.listing-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-xl);
}

.card-img-top {
  transition: transform 0.3s ease;
}

.listing-card:hover .card-img-top {
  transform: scale(1.05);
}

.fade-in-up {
  opacity: 0;
  animation: fadeInUp 0.6s ease-out forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@media (max-width: 768px) {
  .hero-section {
    text-align: center;
    padding: var(--space-8) 0;
  }
}
</style> 