<% layout("layouts/boilerplate") %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="alert alert-danger text-center" role="alert">
        <i class="fas fa-exclamation-triangle fs-1 mb-3 d-block"></i>
        <h4 class="alert-heading mb-3">Oops! Something went wrong</h4>
        <p class="mb-0"><%= message %></p>
        <hr>
        <a href="/" class="btn btn-outline-light btn-sm">
          <i class="fas fa-home me-2"></i>Go Home
        </a>
        <a href="/listings" class="btn btn-outline-light btn-sm ms-2">
          <i class="fas fa-search me-2"></i>Browse Listings
        </a>
      </div>
    </div>
  </div>
</div>